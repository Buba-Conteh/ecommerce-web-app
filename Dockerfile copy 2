# Multi-stage build for Laravel + Inertia.js + React with PostgreSQL
FROM php:8.2-fpm AS base

# Install system dependencies and Node.js
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libxml2-dev \
    libonig-dev \
    zip \
    unzip \
    libpq-dev \
    nginx \
    supervisor \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && docker-php-ext-install pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd opcache \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Copy composer files for better layer caching
COPY composer.json composer.lock ./

# Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader --no-interaction --prefer-dist

# Copy package files for npm
COPY package.json package-lock.json ./

# Install Node dependencies
RUN npm ci

# Copy application files
COPY . .

# Build assets for production
RUN npm run build

# Generate SSR bundle if needed (fail silently if not configured)
RUN npm run build:ssr || true

# Remove node_modules to reduce image size
RUN rm -rf node_modules && npm cache clean --force

# Set permissions
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html/storage \
    && chmod -R 755 /var/www/html/bootstrap/cache

# Production stage
FROM php:8.2-fpm AS production

# Install minimal dependencies
RUN apt-get update && apt-get install -y \
    nginx \
    supervisor \
    postgresql-client \
    mysql-client \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    && docker-php-ext-install pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd opcache \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy built application from base stage
COPY --from=base --chown=www-data:www-data /var/www/html /var/www/html

# Copy configuration files
COPY docker/nginx.conf /etc/nginx/sites-available/default
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY docker/php-fpm.conf /usr/local/etc/php-fpm.d/www.conf

# Setup nginx configuration
RUN mkdir -p /etc/nginx/sites-enabled \
    && ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default \
    && rm -f /etc/nginx/sites-enabled/default.bak || true \
    && sed -i '/include \/etc\/nginx\/sites-enabled/d' /etc/nginx/nginx.conf || true \
    && echo "include /etc/nginx/sites-enabled/*;" >> /etc/nginx/nginx.conf || true \
    && echo "daemon off;" >> /etc/nginx/nginx.conf || true

# Set working directory
WORKDIR /var/www/html

# Copy deployment script if exists (fix typo: scipts -> scripts)
COPY scipts/00-laravel-deploy.sh /usr/local/bin/deploy.sh 2>/dev/null || true
RUN chmod +x /usr/local/bin/deploy.sh 2>/dev/null || true

# Create storage link (fail silently if already exists)
RUN php artisan storage:link || true

# Expose port 80
EXPOSE 80

# Start supervisor (runs nginx and php-fpm)
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
